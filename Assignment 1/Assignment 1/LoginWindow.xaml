<Window x:Class="NgoQuangKhoiWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Username/Phone:" />
            <TextBox Margin="0,0,0,10" Text="{Binding Username}"/>

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" />
        </StackPanel>
    </Grid>
</Window>